<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cleaning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kyald.keretaapi.ui.CleaningActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"
        android:layout_marginBottom="10dp">
    </android.support.v7.widget.Toolbar>

    <Button
        android:text="Pemeriksaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_status"
        android:id="@+id/btn_update"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@drawable/lengkungkuning"
        android:textColor="#fff" />

    <Button
        android:text="Status Kebersihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_status"
        android:background="@drawable/lengkungkuning"
        android:textColor="#fff"
        android:layout_below="@+id/toolbar"
        android:layout_margin="10dp" />
</RelativeLayout>
