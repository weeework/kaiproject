<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_status"
            android:layout_margin="5dp"
            android:visibility="gone" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_chair"
            android:layout_margin="5dp"
            android:layout_below="@+id/id_status" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tiket"
            android:layout_marginStart="27dp"
            android:layout_alignParentTop="false"
            android:layout_margin="5dp"
            android:layout_below="@+id/id_chair" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_name"
            android:layout_margin="5dp"
            android:layout_below="@+id/id_tiket" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_coach"
            android:layout_margin="5dp"
            android:layout_below="@+id/id_name" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_train"
            android:layout_margin="5dp"
            android:layout_below="@+id/id_coach" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
</LinearLayout>