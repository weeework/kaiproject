<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kyald.keretaapi.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"
        android:layout_marginBottom="20dp">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_main"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/idnama"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="116dp"
            android:paddingTop="0dp"
            android:layout_marginTop="5dp"
            android:text="TextView" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idemail"
            android:layout_alignEnd="@+id/idemail"
            android:id="@+id/idtoken"
            android:layout_alignParentLeft="true"
            android:visibility="gone" />

        <TextView
            android:text="Username :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xcv"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:text="Email        :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="35dp" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/mailicon"
            android:id="@+id/imageView4"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/iconuser"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idemail"
            android:layout_marginLeft="115dp"
            android:layout_below="@+id/idcode"
            android:layout_alignStart="@+id/idcode"
            android:layout_marginTop="45dp" />

        <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:id="@+id/btn_logout"
            android:background="@drawable/lengkungkuning"
            android:textColor="#fff"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentEnd="true"
            android:layout_height="30dp"
            android:textSize="12sp" />

        <TextView
            android:text="Status     :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/idemail"
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignStart="@+id/textView11" />

        <TextView
            android:text="Anda belum memesan tiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:id="@+id/id_code"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

    </RelativeLayout>


    <Button
        android:text="Pesan tiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main"
        android:id="@+id/btntiket"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/lengkungkuning"
        android:textColor="#fff"
        android:layout_margin="10dp" />

    <Button
        android:text="Pesan makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btntiket"
        android:id="@+id/btn_food"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:background="@drawable/lengkungkuning"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp" />

    <Button
        android:text="Cek lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <Button
        android:text="lokasi kereta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLokasi"
        android:layout_below="@+id/btn_food"
        android:layout_alignParentStart="true"
        android:background="@drawable/lengkungkuning"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp" />

    <Button
        android:text="informasi penumpang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnInfo"
        android:layout_below="@+id/btnLokasi"
        android:layout_alignParentStart="true"
        android:background="@drawable/lengkungkuning"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp" />

</RelativeLayout>
